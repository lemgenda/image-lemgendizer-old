{
    "buildCommand": "npm run vercel-build",
    "outputDirectory": "dist",
    "framework": "vite",
    "functions": {
        "api/screenshot.js": {
            "maxDuration": 30,
            "memory": 2048
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=3600"
                }
            ]
        },
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, s-maxage=3600"
                }
            ]
        }
    ]
}